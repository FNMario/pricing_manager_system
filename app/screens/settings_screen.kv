#:kivy 2.2.1
#:import IconButton screens.widgets.iconbutton
#:import InfoLabel screens.widgets.infolabel
#:import FilledButton screens.widgets.filledbutton
#:import EmptyButton screens.widgets.emptybutton
#:import TextField screens.widgets.textfield
#:import DataTable screens.widgets.datatable

<IconButton_@IconButton>:
    size: dp(25), dp(25)
<Table@DataTable>:
    size_hint_x: 0.98
    pos_hint: {'center_x': 0.5}
    size_hint_y: None
    height: dp(150)

<Title@Label>:
    font_size: 20
    bold: True
    color: (.13, .14, .19, 1)
    halign: 'center'
    valign: 'middle'
    text_size: self.size
    size_hint_y: None
    height: dp(30)
    canvas.before:
        Color:
            rgba: (.2, .64, .81, 1)
        Rectangle:
            size: self.size
            pos: self.pos

<Space@Label>:
    text: ""
<SettingsScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        bar_color: (1, 1, 1, .3)
        bar_width: dp(15)
        scroll_type: ['bars']
        scroll_wheel_distance: 0
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(20)
            padding: 0, 0, self.parent.bar_width, 0
            # Fractions
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)
                Title:
                    text: "Fractions"
                Table:
                    id: tbl_fractions
                    hint_sizes: [0.15, 0.3, 1, 0.5, 0.4, 0.4, 0.4]
                    header: ["id", "Name", "Description", "Unit", "Fraction 1", "Fraction 2", "Fraction 3"]
                    items: root.get_fractions_items()
                    on_selected_row: root.on_selected_row(lyt_form_fractions, self.items[self.selected_row])
                # Form
                BoxLayout:
                    id: lyt_form_fractions
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(50)
                    padding: dp(10), 0
                    spacing: dp(10)
                    TextField:
                        size_hint_x: None
                        width: dp(40)
                        TextInput:
                            id: txt_id
                            hint_text: "id"
                            disabled: True
                    TextField:
                        size_hint_x: 0.3
                        TextInput:
                            id: txt_alias
                            hint_text: "Name"
                    TextField:
                        size_hint_x: 1
                        TextInput:
                            id: txt_description
                            hint_text: "Description"
                    TextField:
                        size_hint_x: 0.4
                        TextInput:
                            id: txt_unit
                            hint_text: "Unit"
                    TextField:
                        size_hint_x: 0.4
                        TextInput:
                            id: txt_fraction_1
                            hint_text: "Fraction 1"
                            input_filter: 'float'
                    TextField:
                        size_hint_x: 0.4
                        TextInput:
                            id: txt_fraction_2
                            hint_text: "Fraction 2"
                            input_filter: 'float'
                    TextField:
                        size_hint_x: 0.5
                        TextInput:
                            id: txt_fraction_3
                            hint_text: "Fraction 3"
                            input_filter: 'float'
                    IconButton_:
                        source: './assets/icons/save-disk_c.png'
                        on_press: root.btn_save_fraction(lyt_form_fractions)
                    IconButton_:
                        source: './assets/icons/big-plus_c.png'
                        on_press: root.btn_add_fraction(lyt_form_fractions)
                    IconButton_:
                        source: './assets/icons/big-cross_c.png'
                        on_press: root.clear_form(lyt_form_fractions)
            # Supliers
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)
                Title:
                    text: "Suppliers"
                Table:
                    id: tbl_suppliers
                    hint_sizes: [0.2, 1, 1, 0.8, 0.8]
                    header: ["id", "Name", "Phone", "Email", "Address"]
                    items: root.get_suppliers_items()
                    on_selected_row: root.on_selected_row(lyt_form_suppliers, self.items[self.selected_row])
                # Form
                BoxLayout:
                    id: lyt_form_suppliers
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(50)
                    padding: dp(10), 0
                    spacing: dp(10)
                    TextField:
                        size_hint_x: None
                        width: dp(40)
                        TextInput:
                            id: txt_id
                            hint_text: "id"
                            disabled: True
                    TextField:
                        size_hint_x: 1
                        TextInput:
                            id: txt_alias
                            hint_text: "Name"
                    TextField:
                        size_hint_x: 0.8
                        TextInput:
                            id: txt_description
                            hint_text: "Phone"
                    TextField:
                        size_hint_x: 1
                        TextInput:
                            id: txt_description
                            hint_text: "Email"
                    TextField:
                        size_hint_x: 0.8
                        TextInput:
                            id: txt_unit
                            hint_text: "Address"
                    IconButton_:
                        source: './assets/icons/save-disk_c.png'
                        on_press: root.btn_save_supplier(lyt_form_suppliers)
                    IconButton_:
                        source: './assets/icons/big-plus_c.png'
                        on_press: root.btn_add_supplier(lyt_form_suppliers)
                    IconButton_:
                        source: './assets/icons/big-cross_c.png'
                        on_press: root.clear_form(lyt_form_suppliers)
            # Sections
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)
                Title:
                    text: "Sections"
                Table:
                    id: tbl_sections
                    hint_sizes: [0.1, 1]
                    header: ["id", "Name"]
                    items: root.get_sections_items()
                    on_selected_row: root.on_selected_row(lyt_form_sections, self.items[self.selected_row])
                # Form
                BoxLayout:
                    id: lyt_form_sections
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(50)
                    padding: dp(10), 0
                    spacing: dp(10)
                    TextField:
                        size_hint_x: None
                        width: dp(40)
                        TextInput:
                            id: txt_id
                            hint_text: "id"
                            disabled: True
                    TextField:
                        size_hint_x: 1
                        TextInput:
                            id: txt_alias
                            hint_text: "Name"
                    IconButton_:
                        source: './assets/icons/save-disk_c.png'
                        on_press: root.btn_save_section(lyt_form_sections)
                    IconButton_:
                        source: './assets/icons/big-plus_c.png'
                        on_press: root.btn_add_section(lyt_form_sections)
                    IconButton_:
                        source: './assets/icons/big-cross_c.png'
                        on_press: root.clear_form(lyt_form_sections)
                    Space
            # dollar and iva
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                # Iva
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(5)
                    Title:
                        text: "IVA"
                    Table:
                        id: tbl_iva
                        header: ["IVA"]
                        items: root.get_iva_items()
                        on_selected_row: root.on_selected_row(lyt_form_iva, self.items[self.selected_row])
                    # Form
                    BoxLayout:
                        id: lyt_form_iva
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: dp(50)
                        padding: dp(10), 0
                        spacing: dp(10)
                        TextField:
                            TextInput:
                                id: txt_iva
                                hint_text: "IVA"
                                input_filter: 'float'
                        IconButton_:
                            source: './assets/icons/save-disk_c.png'
                            on_press: root.btn_save_iva(tbl_iva.selected_row, float(txt_iva.text))
                        IconButton_:
                            source: './assets/icons/big-plus_c.png'
                            on_press: root.btn_add_iva(float(txt_iva.text))
                        IconButton_:
                            source: './assets/icons/big-cross_c.png'
                            on_press: root.clear_form(lyt_form_iva)
                        Space:
                # Dollar
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(5)
                    Title:
                        text: "Dollar"
                    Table:
                        id: tbl_dollar
                        header: ["Dollar"]
                        items: root.get_dollar_items()
                        on_selected_row: root.on_selected_row(lyt_form_dollar, self.items[self.selected_row])
                    # Form
                    BoxLayout:
                        id: lyt_form_dollar
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: dp(50)
                        padding: dp(10), 0
                        spacing: dp(10)
                        TextField:
                            TextInput:
                                id: txt_dollar
                                hint_text: "Dollar"
                                input_filter: 'float'
                        IconButton_:
                            source: './assets/icons/save-disk_c.png'
                            on_press: root.btn_save_dollar(tbl_dollar.selected_row - 1, float(txt_dollar.text))
                        IconButton_:
                            source: './assets/icons/big-plus_c.png'
                            on_press: root.btn_add_dollar(float(txt_dollar.text))
                        IconButton_:
                            source: './assets/icons/big-cross_c.png'
                            on_press: root.clear_form(lyt_form_dollar)
                        Space:
