#:kivy 2.2.1

<Option>:
    size_hint_y: None
    height: 30
    background_normal: ''
    background_down: ''
    background_color: (.17, .18, .23, 1)
    color: (1, 1, 1, 1)

<SelectOptionDropDown>:
    text: txt_option.text
    BoxLayout:
        orientation: 'horizontal'
        spacing: dp(10)
        size: root.size
        pos: root.pos
        TextInput:
            id: txt_option
            text: root.text
            hint_text: root.hint_text
            color: (1, 1, 1, 1)
            multiline: False
            readonly: root.readonly
            text_size: self.size
            halign: 'left'
            valign: 'bottom'
            size_hint_y: None
            height: 35
            on_text: root.on_text_change()
            on_text_validate: root.text_validate()
            text_validate_unfocus: False
        Image:
            source: root.icon
            size_hint: None, None
            size: dp(20), dp(20)
            pos_hint: {'center_y':.5}
