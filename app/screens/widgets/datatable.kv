#:kivy 2.2.1

<_Header>:
    canvas.before:
        Color:
            rgba: (1, 1, 1, .1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [8]

<_Row>:
    halign: 'left'
    valign: 'center'
    text_size: self.size[0], None
    height: max(20, self.texture_size[1])
    selected_color: (.2, .64, .81, 1)
    canvas.before:
        Color:
            rgba: (.13, .14, .19, 1) if self.background else (0,0,0,0)
        Rectangle:
            size: self.size
            pos: self.pos

<DataTable>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1, 1, 1, .1)
        RoundedRectangle:
            size: self.size[0]-16, self.size[1]
            pos: self.pos[0]+8, self.pos[1]
            radius: [8]
