#:kivy 2.2.1
#:include my_widgets.kv

<ManagePrices>:
    id: main_win
    space_x: self.size[0]
    space_y: self.size[1]
    BoxLayout:
        orientation: 'vertical'
        # size_hint: None, None
        # width: 800
        # height: main_win.space_y
        size: main_win.size
        pos_hint: {'right':1}
        padding: main_win.space_x/2-450, 10
        spacing: 10
        # Form
        BoxLayout:
            id: form_layout
            orientation: 'vertical'
            pos_hint: {'center_x':.5}
            size_hint_y: None
            height: 360
            padding: 100,0
            canvas.before:
                Color: 
                    rgba: (1, 1, 1, .4)
                Line:
                    rounded_rectangle: (self.pos[0],self.pos[1],self.size[0],self.size[1], 4)
                    width: .5
            # Product
            TextField:
                Icon:
                    source: '../media/icons/box.png'
                TextInput:
                    id: txt_product
                    hint_text: "Product"
                    focus: True
                IconButton:
                    source: '../media/icons/search_1.png'
                    on_press: 
                        tbl_products.items = root.search()
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: .4
                    # Local code
                    TextField:
                        Icon:
                            source: '../media/icons/barcode.png'
                        TextInput:
                            id: txt_local_code
                            hint_text: "Local code"
                        IconButton:
                            source: '../media/icons/right.png'
                            on_press: root.btn_on_press()
                        IconButton:
                            source: '../media/icons/double-right.png'
                            on_press: root.btn_on_press()
                        IconButton:
                            source: '../media/icons/search_1.png'
                            on_press: 
                                tbl_products.items = root.search(10)
                    # Supplier
                    TextField:
                        Icon:
                            source: '../media/icons/supplier.png'
                        TextInput:
                            id: txt_supplier
                            hint_text: "Supplier"
                        IconButton:
                            on_press: root.btn_on_press()
                            source: '../media/icons/down.png'
                    # Supplier's code
                    TextField:
                        Icon:
                            source: '../media/icons/barcode.png'
                        TextInput:
                            id: txt_supplier_code
                            hint_text: "Supplier's code"
                        IconButton:
                            source: '../media/icons/search_1.png'
                            on_press: 
                                tbl_products.items = root.search(1)
                    # Quantity
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 10
                        TextField:
                            size_hint_x: 0.6
                            Icon:
                                source: '../media/icons/hashtag.png'
                            TextInput:
                                id: txt_quantity
                                hint_text: "Quantity"
                                input_filter: 'float'
                        TextField:
                            size_hint_x: 0.4
                            TextInput:
                                size_hint_x: 0.5
                                id: txt_unit
                                hint_text: "Unit"
                            IconButton:
                                on_press: root.btn_on_press()
                                source: '../media/icons/down.png'
                    # Cost
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 10
                        TextField:
                            Icon:
                                source: '../media/icons/dollar.png'
                            TextInput:
                                id: txt_cost
                                hint_text: "Cost"
                                input_filter: 'float'
                        BoxLayout:
                            pos_hint: {'top':1}
                            orientation: 'vertical'
                            size_hint_x: None
                            width: 16
                            CheckBox:
                                id: chk_iva
                                on_press: 
                                    root.check_press(self)
                            CheckBox:
                                id: chk_dollar
                                on_press: 
                                    root.check_press(self)
                        BoxLayout:
                            pos_hint: {'top':1}
                            orientation: 'vertical'
                            size_hint_x: None
                            width: 90
                            DoubleClickLabel:
                                id: lbl_iva
                                text: "IVA ( 21% )"
                                font_size: 14
                                halign: 'right'
                                pos_hint: {'left': 1}
                                on_double_click: print('iva')
                            DoubleClickLabel:
                                id: lbl_dollar
                                text: "Dollar ($750.00)"
                                font_size: 14
                                halign: 'right'
                                pos_hint: {'left': 1}
                                on_double_click: print('dollar')
                    # Earning
                    TextField:
                        Icon:
                            source: '../media/icons/earnings.png'
                        TextInput:
                            id: txt_earning
                            hint_text: "Earning"
                            input_filter: 'float'
                        BoxLayout:
                            pos_hint: {'top':1.1}
                            orientation: 'vertical'
                            size_hint_x: None
                            width: self.minimum_width
                            IconButton:
                                on_press: root.btn_on_press()
                                pos_hint: {}
                                source: '../media/icons/plus_small.png'
                                # size: 14,14
                            IconButton:
                                on_press: root.btn_on_press()
                                pos_hint: {}
                                source: '../media/icons/minus_small.png'
                                # size: 14,14
                    # Section
                    TextField:
                        Icon:
                            source: '../media/icons/list.png'
                        TextInput:
                            id: txt_section
                            hint_text: "Section"
                        IconButton:
                            on_press: root.btn_on_press()
                            source: '../media/icons/down.png'
                    # Date
                    TextField:
                        Icon:
                            source: '../media/icons/calendar.png'
                        TextInput:
                            id: txt_date
                            hint_text: "Date"
                        IconButton:
                            on_press: root.btn_on_press()
                            source: '../media/icons/refresh_date.png'
                # Image
                BoxLayout:
                    size_hint_x: .6
                    padding: 8
                    # canvas.before:
                    #     Color: 
                    #         rgba: (0, 0, 1, .5)
                    #     Rectangle:
                    #         size: self.size
                    #         pos: self.pos
                    Image:
                        # size_hint: .9, .9
                        # pos_hint: {'center_x':.5, 'center_y':.5}
                        source: '../media/images/DefaultBase.png'
                        fit_mode: 'cover'
        # Buttons
        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x':.5, 'center_y':.5}
            size_hint_y: None
            height: self.minimum_height
            spacing:10
            # Save
            Button:
                id: btn_save
                text: "Save"
                on_press: print(form_ly.size)
            # Add
            EmptyButton:
                id: btn_add
                text: "Add"
                on_press: print("button add changes pressed")
            # Delete
            EmptyButton:
                id: btn_delete
                text: "Delete"
                on_press: 
                    tbl_products.items = []
            # Replace
            EmptyButton:
                id: btn_replace
                text: "Replace"
                on_press: print("button add changes pressed")
            # Compare
            EmptyButton:
                id: btn_compare
                text: "Compare"
                on_press: 
                    print(tbl_products.widths)
            # Clean
            EmptyButton:
                id: btn_clean
                text: "Clean"
                on_press: 
                    root.clean_all()
                on_release: 
                    txt_product.focus = True
        # Table
        BoxLayout:
            id: table_layout
            orientation: 'horizontal'
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                DataTable:
                    id: tbl_products
                    size_hint_y: None
                    height: self.minimum_height
                    header_background_color: [1,1,1,0.5]
                    hint_sizes: [0.2,0.4,0.2,0.2]
                    header: ["Local code", "Product", "Quantity", "Provider"]
