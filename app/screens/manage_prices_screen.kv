#:kivy 2.2.1
#:import TextField screens.widgets.textfield
#:import Icon screens.widgets.icon
#:import IconButton screens.widgets.iconbutton
#:import InfoLabel screens.widgets.infolabel
#:import FilledButton screens.widgets.filledbutton
#:import EmptyButton screens.widgets.emptybutton
#:import DataTable screens.widgets.datatable
#:import DoubleClickLabel screens.widgets.doubleclicklabel

<ManagePrices>:
    id: manage_prices_screen
    BoxLayout:
        orientation: 'vertical'
        size: self.parent.size
        pos_hint: {'right':1}
        padding: self.parent.size[0]/2-450, 10
        spacing: 10
        # Form
        BoxLayout:
            id: form_layout
            orientation: 'vertical'
            pos_hint: {'center_x':.5}
            size_hint_y: None
            height: 360
            padding: 100,0
            canvas.before:
                Color: 
                    rgba: (1, 1, 1, .4)
                Line:
                    rounded_rectangle: (self.pos[0],self.pos[1],self.size[0],self.size[1], 4)
                    width: .5
            # Product
            TextField:
                Icon:
                    source: './assets/icons/box.png'
                TextInput:
                    id: txt_product
                    hint_text: "Product"
                    focus: True
                IconButton:
                    id: btn_search_product
                    source: './assets/icons/search_1.png'
                    on_press: root.btn_search_product_on_press()
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: .4
                    # Local code
                    TextField:
                        Icon:
                            source: './assets/icons/barcode.png'
                        TextInput:
                            id: txt_local_code
                            hint_text: "Local code"
                            on_text_validate: root.btn_search_local_code_on_press()
                        IconButton:
                            id: btn_next_code
                            source: './assets/icons/right.png'
                            on_press: root.btn_next_code_on_press()
                        IconButton:
                            id: btn_new_code
                            source: './assets/icons/double-right.png'
                            on_press: root.btn_new_code_on_press()
                        IconButton:
                            id: btn_search_local_code
                            source: './assets/icons/search_1.png'
                            on_press: root.btn_search_local_code_on_press()
                    # Supplier
                    TextField:
                        Icon:
                            source: './assets/icons/supplier.png'
                        TextInput:
                            id: txt_supplier
                            hint_text: "Supplier"
                        IconButton:
                            id: cb_supliers
                            source: './assets/icons/down.png'
                    # Supplier's code
                    TextField:
                        Icon:
                            source: './assets/icons/barcode.png'
                        TextInput:
                            id: txt_supplier_code
                            hint_text: "Supplier's code"
                            on_text_validate: root.btn_search_suppliers_code_on_press()
                        IconButton:
                            id: btn_search_suppliers_code
                            source: './assets/icons/search_1.png'
                            on_press: root.btn_search_suppliers_code_on_press()
                    # Quantity
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 10
                        TextField:
                            size_hint_x: 0.6
                            Icon:
                                source: './assets/icons/hashtag.png'
                            TextInput:
                                id: txt_quantity
                                hint_text: "Quantity"
                                input_filter: 'float'
                        TextField:
                            size_hint_x: 0.4
                            TextInput:
                                size_hint_x: 0.5
                                id: txt_unit
                                hint_text: "Unit"
                            IconButton:
                                id: cb_unit
                                source: './assets/icons/down.png'
                    # Cost
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 10
                        TextField:
                            Icon:
                                source: './assets/icons/dollar.png'
                            TextInput:
                                id: txt_cost
                                hint_text: "Cost"
                                input_filter: 'float'
                                on_text: root.update_prices()
                                on_text_validate: root.calculate_cost()
                        BoxLayout:
                            pos_hint: {'top':1}
                            orientation: 'vertical'
                            size_hint_x: None
                            width: 16
                            CheckBox:
                                id: chk_iva
                                on_state: root.calculate_cost(["iva"])
                            CheckBox:
                                id: chk_dollar
                                on_state: root.calculate_cost(["dollar"])
                        BoxLayout:
                            pos_hint: {'top':1}
                            orientation: 'vertical'
                            size_hint_x: None
                            width: 90
                            DoubleClickLabel:
                                id: lbl_iva
                                value: 21
                                text: "IVA ( " + self.value_string + "% )"
                                font_size: 14
                                halign: 'right'
                                pos_hint: {'left': 1}
                                on_double_click: root.change_iva()
                            DoubleClickLabel:
                                id: lbl_dollar
                                value: root.get_dollar_price()
                                text: "Dollar ($" + self.value_string + ")"
                                font_size: 14
                                halign: 'right'
                                pos_hint: {'left': 1}
                                on_double_click: root.change_dollar()
                    # Earning
                    TextField:
                        Icon:
                            source: './assets/icons/earnings.png'
                        TextInput:
                            id: txt_earning
                            hint_text: "Earning"
                            input_filter: 'int'
                            on_text: root.update_prices()
                        BoxLayout:
                            pos_hint: {'top':1.1}
                            orientation: 'vertical'
                            size_hint_x: None
                            width: self.minimum_width
                            IconButton:
                                id: btn_earnings_plus
                                on_press: root.btn_earnings_plus_on_press()
                                pos_hint: {}
                                source: './assets/icons/plus_small.png'
                            IconButton:
                                id: btn_earnings_minus
                                on_press: root.btn_earnings_minus_on_press()
                                pos_hint: {}
                                source: './assets/icons/minus_small.png'
                    # Section
                    TextField:
                        Icon:
                            source: './assets/icons/list.png'
                        TextInput:
                            id: txt_section
                            hint_text: "Section"
                        IconButton:
                            id: cb_section
                            source: './assets/icons/down.png'
                    # Date
                    TextField:
                        Icon:
                            source: './assets/icons/calendar.png'
                        TextInput:
                            id: txt_date
                            hint_text: "Date"
                        IconButton:
                            id: btn_refresh_date
                            on_press: root.btn_refresh_date_on_press()
                            source: './assets/icons/refresh_date.png'
                # Image
                AnchorLayout:
                    size_hint_x: .6
                    padding: 8
                    Image:
                        source: './assets/images/DefaultBase.png'
                        fit_mode: 'cover'
        # Buttons
        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x':.5, 'center_y':.5}
            size_hint_y: None
            height: self.minimum_height
            spacing:10
            # Save
            FilledButton:
                id: btn_save
                text: "Save"
                on_press: root.btn_save_on_press()
            # Add
            EmptyButton:
                id: btn_add
                text: "Add"
                on_press: root.btn_add_on_press()
            # Delete
            EmptyButton:
                id: btn_delete
                text: "Delete"
                on_press: root.btn_delete_on_press()
            # Replace
            EmptyButton:
                id: btn_replace
                text: "Replace"
                on_press: root.btn_replace_on_press()
            # Compare
            EmptyButton:
                id: btn_compare
                text: "Compare"
                on_press: root.btn_compare_on_press()
            # Clean
            EmptyButton:
                id: btn_clean
                text: "Clean"
                on_press: root.btn_clean_on_press()
                on_release: txt_product.focus = True
        # Table
        BoxLayout:
            id: table_layout
            orientation: 'horizontal'
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                DataTable:
                    id: tbl_products
                    size_hint_y: None
                    height: self.minimum_height
                    header_background_color: [1,1,1,0.5]
                    hint_sizes: [0.2,0.4,0.2,0.2]
                    header: ["Local code", "Product", "Quantity", "Provider"]
