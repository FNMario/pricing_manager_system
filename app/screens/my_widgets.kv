#:kivy 2.2.1

<Button>:
    font_size: 16
    bold: True
    color: (.13, .14, .19, 1)
    size_hint_y: None
    height: 40
    background_normal: 'atlas://data/images/defaulttheme/button_pressed'
    background_down: 'atlas://data/images/defaulttheme/button'

<DoubleClickLabel>:

<EmptyButton@Button>:
    background_normal: ''
    background_down: 'atlas://data/images/defaulttheme/button_pressed'
    background_color: (.13, .14, .19, 1)
    color: (.2, .64, .81, 1)
    canvas.before:
        Color:
            rgba: (.2, .64, .81, 1)
        Line:
            rounded_rectangle: (self.pos[0],self.pos[1],self.size[0],self.size[1], 4)
            width: 2

<TextInput>:
    font_size: 16
    background_normal: ''
    background_active: ''
    foreground_color: (1, 1, 1, 1)
    cursor_color: (1, 1, 1, 1)
    multiline: False
    write_tab: False
    password_mask: "o"
    background_color:  (0 ,0 ,0 , 0)



<CategoryButton@ButtonBehavior+BoxLayout>:
    active: False
    text: cat_label.text
    icon: cat_icon.source
    screen_name: "none"
    size_hint_y: None
    height: 50 
    padding: 15
    spacing: 10
    canvas:
        Color: 
            rgba: (1, 1, 1, .05) if root.active else (0,0,0,0)
        Rectangle:
            size: self.size
            pos: self.pos
    Icon:
        id: cat_icon
        source: root.icon
        size: 24,24
    Label:
        id: cat_label
        text: root.text
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        font_size: 18
        color: (1,1,1,1) if root.active else (1,1,1,.5)

<InfoLabel@Label>:
    halign: 'left'
    valign: 'middle'
    text_size: self.size
    size_hint_y: None
    height: 40
    
<IconButton@ButtonBehavior+Image>:
    size_hint: None, None
    size: 18, 18
    pos_hint: {'center_y':.5}

<Icon@Image>:
    size_hint: None, None
    size: 20, 20
    pos_hint: {'center_y':.5}

<TextField@BoxLayout>:
    size_hint_y: None
    height: 40
    orientation: 'horizontal'
    spacing: 5
    padding: 2, 0, 4, 0
    canvas:
        Color: 
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: root.size[0], 1
            pos: root.pos[0], root.pos[1] + 4

<CheckBox>:
    background_checkbox_normal: './assets/icons/square_2.png'
    background_checkbox_down: './assets/icons/square_plus.png'

<Header>:
    canvas.before:
        Color: 
            rgba: (1, 1, 1, .1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [8]

<Row>:
    canvas.before:
        Color: 
            rgba: (.13, .14, .19, 1) if self.background else (0,0,0,0)
        Rectangle:
            size: self.size
            pos: self.pos

<DataTable>:
    canvas.before:
        Color: 
            rgba: (1, 1, 1, .1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [8]